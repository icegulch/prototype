---
layout: base.liquid
pagination: 
  data: dayPagination
  size: 1
  alias: posts
permalink: "/{% if pagination.pageNumber > 0 %}page-{{ pagination.pageNumber | plus: 1 }}/{% endif %}index.html"
---

{% for post in posts %}
  <time>
    {{ post.created_at | date: "%a, %b %-d '%y @ %H:%M" }}
  </time>
  {{ post.message | markdownify | prependCloudinaryURL }}
{% endfor %}
